
<% set_meta_tags title: @portfolio.name,
                 description: @portfolio.introduce,
                 keywords: "#{@portfolio.name.to_s} thietkenha thietke thiet ke nha xaydunghue" %>
<% set_meta_tags og: {
  title:    @portfolio.name,
  type:     'website',
  url:      request.original_url,
  image:    @portfolio.photo_medium_url.to_s,
  description: @portfolio.introduce
} %>

<div class="loader"><i class="fa fa-refresh fa-spin"></i></div>
<!--================= main start ================-->
<div id="main">
    <!--=============== header ===============-->	
    <%= render 'shared/header'  %>
    <!--=============== wrapper ===============-->	
    <div id="wrapper">
        <div class="content-holder elem scale-bg2 transition3" >
            <div class="content">
               <!-- background animation  -->		
            <div class="bg-animate"><img src="<%= asset_path('body-bg.png') %>"  class="respimg" alt=""></div>
                <!-- wrapper inner -->	
                <div class="wrapper-inner">
                    <section class="no-padding no-border">
                        <!-- page title -->		
                        <div class="container">
                            <div class="page-title no-border">
                                <h2><%= @portfolio.name  %></h2>
                                <h3><span><%= @portfolio.introduce %></span></h3>
                            </div>
                        </div>
                    </section>
                    <div class="clearfix"></div>
                    <div class="container">
                        <section>
                            <div class="gallery-items three-coulms grid-small-pad popup-gallery">
                                <% @p_details.each do |detail| %>
                                  <div class="gallery-item houses">
                                      <div class="grid-item-holder">
                                          <div class="box-item">
                                              <a href="<%= detail.photo_origin_url.to_s %>" title="<%= detail.introduce %>">
                                              <span class="overlay"></span> 
                                              <img src="<%= detail.photo_medium_url.to_s %>" alt="">
                                              </a>
                                          </div>
                                      </div>
                                  </div>
                                <% end %>
                            </div>
                            <!-- end gallery items -->	
                            <div class="row">
                                <div class="col-md-10">
                                    <div class="project-details">
                                        <ul class="descr">
                                            <li><span>Date:</span> <%= @portfolio.project_year || '01/2021' %> </li>
                                            <li><span>Architect:</span> <%= @portfolio.architect %> </li>
                                            <li><span>Status:</span> Completed </li>
                                            <li><span>Location: </span> <%=  @portfolio.location || 'Hue, Vietnam' %> </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </section>
                        <!-- about text end -->
                    </div>
                </div>
                <!-- wrapper inner end   -->
                <!-- parallax column   -->
                <div class="img-wrap">
                    <div class="bg" style="background-image: url(<%= @portfolio.photo_origin_url.to_s %>)"  data-top-bottom="transform: translateY(300px);" data-bottom-top="transform: translateY(-300px);"></div>
                </div>
                <!-- parallax column end   -->
                <!--to top    -->
                <div class="to-top">
                    <i class="fa fa-long-arrow-up"></i>
                </div>
                <!-- to top  end -->
                <!--=============== footer ===============-->
                <%= render 'shared/footer'  %>
                <!-- footer end    -->
            </div>
            <!-- content  end  -->
        </div>
        <!-- content-holder  end  -->
    </div>
    <!-- wrapper end -->
</div>
